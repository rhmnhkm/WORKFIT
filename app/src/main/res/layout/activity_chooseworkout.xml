<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E0927">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W O R K O U T"
        android:textStyle="bold"

        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="148dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your workout plan"
        android:textStyle="bold"
        android:textColor="#FF8C00"
        tools:layout_editor_absoluteY="43dp"
        tools:layout_editor_absoluteX="113dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ArmWorkoutPic"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="82dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/AbsWorkoutPic"
        tools:layout_editor_absoluteY="222dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_back_18dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="24dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/LegWorkoutPic"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="361dp" />
    <Button
        android:id="@+id/button4"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="#FF8C00"
        android:textColor="#2E0927"
        android:text="START WORKOUT"
        android:layout_margin="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="513dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:text="Arm workout"
        android:textAllCaps="false"
        android:padding="10dp"
        tools:layout_editor_absoluteY="126dp"
        tools:layout_editor_absoluteX="148dp" />

    <Button

        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:text="Abs Workout"
        android:textAllCaps="false"
        android:padding="10dp"
        tools:layout_editor_absoluteY="285dp"
        tools:layout_editor_absoluteX="142dp" />
    <Button

        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:text="Legs Workout"
        android:textAllCaps="false"
        android:padding="10dp"
        tools:layout_editor_absoluteY="421dp"
        tools:layout_editor_absoluteX="141dp" />


</android.support.constraint.ConstraintLayout>